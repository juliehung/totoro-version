    <!--
        Added the entity NhiExtendPatient.
    -->
    <changeSet id="20190604084435-1" author="jhipster">
        <createTable tableName="nhi_extend_patient">
            <column name="patient_id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="card_number" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="card_annotation" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="card_valid_date" type="date">
                <constraints nullable="true" />
            </column>

            <column name="card_issue_date" type="date">
                <constraints nullable="true" />
            </column>

            <column name="nhi_identity" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="available_times" type="integer">
                <constraints nullable="true" />
            </column>
            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here, do not remove-->
        </createTable>
        
    </changeSet>
