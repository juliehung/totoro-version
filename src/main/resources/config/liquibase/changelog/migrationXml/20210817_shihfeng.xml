<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd">

    <changeSet id="20210817-shihfeng" author="ShihFeng">
        <createTable tableName="holiday">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="year" type="varchar(4)">
                <constraints nullable="false"/>
            </column>
            <column name="date" type="date">
                <constraints nullable="false"/>
            </column>
            <column name="day_off" type="varchar(1)">
                <constraints nullable="false"/>
            </column>
            <column name="day_name" type="text">
                <constraints nullable="true"/>
            </column>
            <column name="category" type="text">
                <constraints nullable="true"/>
            </column>
            <column name="description" type="text">
                <constraints nullable="true"/>
            </column>
        </createTable>
        <createIndex tableName="holiday" indexName="idx_holiday_year" unique="false">
            <column name="year"/>
        </createIndex>
    </changeSet>
</databaseChangeLog>
