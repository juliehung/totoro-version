<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd">

    <changeSet id="20190624-AddColumn" author="Jim">

        <addColumn tableName="accounting">
            <column name="withdrawal" type="double">
                <constraints nullable="true" />
            </column>

            <column name="transaction_time" type="datetime">
                <constraints nullable="true" />
            </column>

            <column name="staff" type="varchar(255)">
                <constraints nullable="true" />
            </column>
        </addColumn>

        <dropDefaultValue tableName="accounting" columnName="transaction_time" columnDataType="datetime"/>

    </changeSet>
</databaseChangeLog>
